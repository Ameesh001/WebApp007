@model WebApplication007.Models.Role

@{
    ViewData["Title"] = "Edit";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-xl-6">
            <h1 class="mt-4">Edit Role</h1>
        </div>
        <div class="col-xl-6">
            <h1 class="text-right">
                <a href="~/Account/" class="mt-4 btn btn-info" role="button"><i class="nav-icon fas fa-chevron-circle-left"></i> Back</a>
            </h1>
        </div>
    </div>
    @*fa-step-backward*@
    <hr>


    <form class="form-horizontal ng-pristine ng-valid ng-scope" action="~/Account/edit/@Model.RoleID" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <input type="text" value="@Model.RoleName" class="form-control" name="RoleName" placeholder="Enter New Role Name">

                    <input type="hidden" value="@Model.RoleID" name="RoleID">
                </div>
            </div>

            <div class="col-sm-2">
                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Update</button>
                </div>
            </div>
        </div>
    </form>

</div>

